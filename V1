#For the computer:
#1 = rock
#2 = paper
#3 = scissors

import random 
RPS_comp_choice = random.randint(1, 3)
RPS_user_choice = input("Rock, paper, or scissors?")

#The possible outcomes if the user selects rock
if RPS_user_choice == "rock" and RPS_comp_choice == 1:
        print("The computer picked rock. It's a tie!")
elif RPS_user_choice == "rock" and RPS_comp_choice == 2:
        print("The computer picked paper. You lose!")
elif RPS_user_choice == "rock" and RPS_comp_choice == 3:
        print("The computer picked scissors. You win!")

#The possible outcomes if the user selects paper
elif RPS_user_choice == "paper" and RPS_comp_choice == 1:
        print("The computer picked rock. You win!")
elif RPS_user_choice == "paper" and RPS_comp_choice == 2:
        print("The computer picked paper. It's a tie!")
elif RPS_user_choice == "paper" and RPS_comp_choice == 3:
        print("The computer picked scissors. You lose!")

#The possible outcomes if the user selects scissors
elif RPS_user_choice == "scissors" and RPS_comp_choice == 1:
        print("The computer picked rock. You lose!")
elif RPS_user_choice == "scissors" and RPS_comp_choice == 2:
        print("The computer picked paper. You win!")
elif RPS_user_choice == "scissors" and RPS_comp_choice == 3:
        print("The computer picked scissors. It's a tie!")

else:
    print("Oops! Something went wrong.")
